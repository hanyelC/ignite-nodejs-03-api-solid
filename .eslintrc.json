{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "align-import"
    ],
    "rules": {
        "align-import/align-import": "error",
        "no-multi-spaces": ["error", {
          "ignoreEOLComments": true,
          "exceptions": {
            "ImportDeclaration": true
          }
        }],
        "key-spacing": ["error", {
          "align": "value"
        }],
        "no-multiple-empty-lines": ["error", {
          "maxEOF": 0,
          "max": 1,
          "maxBOF": 0
        }],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-trailing-spaces": "error",
        "arrow-parens": "error",
        "eol-last": "error"
    }
}
